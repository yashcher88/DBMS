		<StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
		<DockFluentTheme />
		<StyleInclude Source="avares://DBMS/Sources/Styles/AutoCompleteBox.axaml" />
		<StyleInclude Source="avares://DBMS/Sources/Styles/Button.axaml" />
