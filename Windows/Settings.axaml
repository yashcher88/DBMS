<Window xmlns="https://github.com/avaloniaui"
        xmlns:classes="using:DBMS.Classes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:DBMS"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
		Width="640" Height="480"
        x:Class="DBMS.Settings"
		x:DataType="classes:BaseWindow"

		DataContext="{Binding $self}"
        WindowStartupLocation="CenterScreen"
        Title="Settings">
	<Grid RowDefinitions="*,1,40">
		<Grid ColumnDefinitions="25*,4,75*" Grid.Row="0">
			<TreeView Grid.Column="0" Classes="Std">
			</TreeView>

			<GridSplitter Grid.Column="1"/>
			<Grid Grid.Column="2" x:Name="RootGrid">
				<local:TreeGrid/>
			</Grid>
		</Grid>
		<Border Grid.Row="1" Height="1" Background="Gray" />
		<Grid Grid.Row="2">
			<WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
				<Button x:Name="bSave" Margin="0 0 10 0" Content="{Binding store.Lang[Save]}" Classes="Std"/>
				<Button x:Name="bDefault" Margin="0 0 10 0" Content="{Binding store.Lang[RestoreDefaults]}" Classes="Std"/>
				<Button x:Name="bClose" Margin="0 0 10 0" Content="{Binding store.Lang[Cancel]}" Classes="Std"/>
			</WrapPanel>
		</Grid>
	</Grid>
</Window>
