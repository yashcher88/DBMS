    <!-- Operators -->
    <Keywords color="Operator">
      <Word>LIKE</Word>
      <Word>ILIKE</Word>
      <Word>SIMILAR</Word>
      <Word>BETWEEN</Word>
    </Keywords>
  </RuleSet>
</SyntaxDefinition>