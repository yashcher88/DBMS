<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="Window">
		<Setter Property="Background"
                Value="{Binding [FormBackground], Source={StaticResource UserColors}}" />
		<Setter Property="Foreground"
                Value="{Binding [FormForeground], Source={StaticResource UserColors}}" />
	</Style>

	<Style Selector="Button">
		<Setter Property="Background"
                Value="{Binding [ButtonBackground], Source={StaticResource UserColors}}" />
		<Setter Property="Foreground"
                Value="{Binding [ButtonForeground], Source={StaticResource UserColors}}" />
		<Setter Property="BorderBrush"
                Value="{Binding [ButtonBorder], Source={StaticResource UserColors}}" />
	</Style>

</Styles>