<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<Style Selector="Button">
		<Setter Property="Padding" Value="10 2"/>
	</Style>
	
	<Style Selector="Button.inputbutton /template/ ContentPresenter">
		<Setter Property="BorderThickness" Value="0"/>
		
		<Setter Property="Margin" Value="0 0 4 0"/>
		<Setter Property="Width" Value="16"/>
		<Setter Property="Height" Value="16"/>
	</Style>
	<Style Selector="Button.filter /template/ ContentPresenter">
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Background">
			<Setter.Value>
				<ImageBrush Source="/Sources/SmallIcons/Search.png" Stretch="UniformToFill" />
			</Setter.Value>
		</Setter>
	</Style>
	<Style Selector="Button.unfilter /template/ ContentPresenter">
		<Setter Property="Background">
			<Setter.Value>
				<ImageBrush Source="/Sources/SmallIcons/SearchCancel.png" Stretch="UniformToFill" />
			</Setter.Value>
		</Setter>
	</Style>
</Styles>
