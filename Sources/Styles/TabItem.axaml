<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="TabItem">
		<Setter Property="Padding" Value="10 5 10 3"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontFamily" Value="Arial"/>
		<Setter Property="Background" Value="#d0d0d0"/>
		<Setter Property="Foreground" Value="Black"/>
		<Setter Property="MinHeight" Value="1"/>
		<Setter Property="BorderThickness" Value="1 1 1 0"/>
		<Setter Property="BorderBrush" Value="#808080"/>
		<Setter Property="CornerRadius" Value="1 1 0 0"/>
		<Style Selector="^:pointerover:not(:selected) /template/ ContentPresenter">
			<Setter Property="Background" Value="#e0e0e0" />
			<Setter Property="TextElement.Foreground" Value="Black" />
			<Setter Property="BorderBrush" Value="#909090"/>
		</Style>
		<Style Selector="^:pointerover:selected /template/ ContentPresenter">
			<!--<Setter Property="Background" Value="#007fe0" />-->
			<Setter Property="Background" Value="#006cbe" />
			<Setter Property="TextElement.Foreground" Value="#ffffff" />
			<Setter Property="BorderBrush" Value="#003c9e"/>
		</Style>
	</Style>
	<Style Selector="TabItem:selected:not(:pointerover) /template/ ContentPresenter">
		<Setter Property="Background" Value="#006cbe"/>
		<Setter Property="Foreground" Value="#ffffff"/>
		<Setter Property="BorderBrush" Value="#003c9e"/>
	</Style>
</Styles>
