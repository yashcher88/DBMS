<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="AutoCompleteBox">
		<Setter Property="MinHeight" Value="1"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Height" Value="22"/>
		<Setter Property="Padding" Value="5 2"/>
	</Style>
	<Style Selector="AutoCompleteBox.ConnectionEdit">
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="CornerRadius" Value="0"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontFamily" Value="Arial"/>
		<Setter Property="Width" Value="250"/>
		<Setter Property="Height" Value="22"/>
		<Setter Property="MinHeight" Value="22"/>
		<Setter Property="BorderBrush" Value="#ADADAD"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>
	<Style Selector="AutoCompleteBox.ConnectionEdit:pointerover /template/ ContentPresenter">
		<Setter Property="BorderBrush" Value="#ADADAD"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>
	<Style Selector="AutoCompleteBox#PART_SuggestionsContainer">
		<Setter Property="CornerRadius" Value="0"/>
	</Style>
	<Style Selector="AutoCompleteBox ListBoxItem">
		<Setter Property="Padding" Value="3 3 3 0"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>
</Styles>
