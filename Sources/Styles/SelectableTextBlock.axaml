<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="SelectableTextBlock.Std">
		<Setter Property="Background" Value="{DynamicResource ControlNormalBgColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource ControlNormalTextColor}"/>
		<Setter Property="Padding" Value="20 20 0 0"/>
		<Setter Property="SelectionBrush" Value="{DynamicResource ControlSelectionBgColor}"/>
		<Setter Property="SelectionForegroundBrush" Value="{DynamicResource ControlSelectionTextColor}"/>
	</Style>

</Styles>
