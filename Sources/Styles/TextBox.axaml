<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="TextBox.Std">
		<Setter Property="Background" Value="{DynamicResource ControlNormalBgColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource ControlNormalTextColor}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlNormalBorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="SelectionBrush" Value="{DynamicResource ControlSelectionBgColor}"/>
		<Setter Property="SelectionForegroundBrush" Value="{DynamicResource ControlSelectionTextColor}"/>
		<Setter Property="MinHeight" Value="20"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Height" Value="20"/>
		<Setter Property="Padding" Value="2"/>
		<Setter Property="FontFamily" Value="Arial"/>
		<Setter Property="CornerRadius" Value="0"/>
	</Style>
	<Style Selector="TextBox.Std:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource ControlNormalBorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>
	<Style Selector="TextBox.Std:pointerover">
		<Setter Property="Background" Value="{DynamicResource ControlNormalBgColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource ControlNormalTextColor}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlNormalBorderColor}"/>
	</Style>
	<Style Selector="TextBox.Std:focus">
		<Setter Property="Background" Value="{DynamicResource ControlFocusBgColor}"/>
		<Setter Property="Foreground" Value="{DynamicResource ControlFocusTextColor}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlFocusBorderColor}"/>
	</Style>
	<Style Selector="TextBox.Std:focus /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="{DynamicResource ControlFocusBgColor}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlFocusBorderColor}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>
	<Style Selector="TextBox.ConnectionEdit">
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Width" Value="250"/>
	</Style>
</Styles>
