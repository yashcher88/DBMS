<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:gif="clr-namespace:Avalonia.Gif;assembly=Avalonia.Gif"
			 xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="DBMS.UserControls.QueryWindow">
	<Grid RowDefinitions="*,4,Auto,30">
		<AvaloniaEdit:TextEditor Text="Hello AvaloniaEdit!"
                                ShowLineNumbers="True"
                                FontFamily="Consolas" Grid.Row="0">
			<AvaloniaEdit:TextEditor.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Подключиться к серверу" Click="ConnectToServer"/>
					<MenuItem Header="Выполнить" Click="ExecuteQuery"/>
					<MenuItem Header="Отменить выполнение" Click="CancelQuery"/>
				</ContextMenu>
			</AvaloniaEdit:TextEditor.ContextMenu>
		</AvaloniaEdit:TextEditor>
		<GridSplitter Grid.Row="1" Name="ResultSplitter" IsVisible="false"/>
		<TabControl Grid.Row="2" Name="Result" IsVisible="false">
			<TabItem Header="Результаты">

			</TabItem>
			<TabItem Header="План запроса">

			</TabItem>
			<TabItem Header="Сообщения">

			</TabItem>
		</TabControl>
		<Grid Grid.Row="3">
			<Panel Name="StatePanel" Background="Yellow">
				<Grid ColumnDefinitions="24,*,Auto,Auto,Auto,Auto,Auto">
					<Image Grid.Column="0" Name="ImageState" Source="/Sources/StateIcons/CompleteError.png" Width="14" Height="14" Margin="2"/>
					<TextBlock Text="Статус" x:Name="QueryState" Grid.Column="1" Height="18" Margin="2"/>
					<TextBlock Text="Сервер" x:Name="QueryServer" Grid.Column="2" Height="18" Margin="2"/>
					<TextBlock Text="Пользователь" x:Name="QueryUser" Grid.Column="3" Height="18" Margin="2"/>
					<TextBlock Text="База данных" x:Name="QueryDB" Grid.Column="4" Height="18" Margin="2"/>
					<TextBlock Text="00:00:00" x:Name="QueryTime" Grid.Column="5" Height="18" Margin="2"/>
					<TextBlock Text="0 строк" x:Name="QueryRows" Grid.Column="6" Height="18" Margin="2"/>
				</Grid>
			</Panel>
		</Grid>
	</Grid>
</UserControl>
